<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="269dp">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:clipToOutline="true"
            app:cardCornerRadius="40dp"
            card_view:cardCornerRAdius="40dp" />

        <View
            android:id="@+id/blurr"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:alpha="0.755"
            android:background="@color/darkRed" />

        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="65dp"
            android:text="event Title"
            android:textColor="@color/white"
            android:textSize="20dp"
            card_view:ignore="TextContrastCheck">

        </TextView>

        <TextView
            android:id="@+id/eventPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="14dp"
            android:text="event Place"
            android:textColor="@color/white"
            android:textSize="20dp"
            card_view:ignore="TextContrastCheck">

        </TextView>

        <TextView
            android:id="@+id/eventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="129dp"
            android:layout_marginBottom="14dp"
            android:layout_toEndOf="@+id/eventPlace"
            android:text="event Time"
            android:textColor="@color/white"
            android:textSize="20dp"
            card_view:ignore="TextContrastCheck">

        </TextView>

        <TextView
            android:id="@+id/eventparticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="64dp"
            android:layout_toEndOf="@+id/eventTitle"
            android:text="event paticipants"
            android:textColor="@color/white"
            android:textSize="20dp"
            card_view:ignore="TextContrastCheck">

        </TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>