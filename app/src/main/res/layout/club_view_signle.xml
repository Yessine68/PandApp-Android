<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageProfileInsta"
        android:layout_width="99dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:elevation="15dp"
        android:padding="5dp"
        android:src="@drawable/me"
        app:shapeAppearanceOverlay="@style/Circular" />

    <TextView
        android:id="@+id/clubNameInsta"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="31dp"
        android:layout_toEndOf="@+id/imageProfileInsta"
        android:text="ClubName"
        android:textSize="35sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/descriptioninsta"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="121dp"
        android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsumlorem ipsum"
        android:textColor="@color/black"
        android:textSize="15sp">

    </TextView>

    <Button
        android:id="@+id/joinInsta"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="219dp"
        android:text="Join">

    </Button>

    <View
        android:id="@+id/pppp"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/joinInsta"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp" />

    <Button
        android:id="@+id/chatButton"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@+id/pppp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="292dp"
        android:text="Open chat">

    </Button>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/chatButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp" />

</RelativeLayout>